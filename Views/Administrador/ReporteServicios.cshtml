
@{

    Layout = null;

    ViewBag.Title = "ReporteServicios";
}

@model Clinipet.Dtos.ReporteDto

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="@Url.Content("~/Estilos/estilosReporte.css")">

</head>
<body>


        <div class="contenedor">
            <div class="encabezado">
                <img src="~/Imagenes/logo_clinipet_sin_fondo.png" alt="Logo" />
                <h1>Veterinaria CliniPet</h1>
            </div>
            <p class="texto">
                A continuación se muestran los servicios, tanto generales
                como especializados, a los cuales los clientes de CliniPet han accedido
                hasta la fecha.
            </p>
            <div class="titulo">Servicios Generales</div>
            <table>
                <thead>
                    <tr>
                        <th>Servicio</th>
                        <th>Total de citas</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Generales)
                    {
                        <tr>
                            <td>@item.nom_serv</td>
                            <td>@item.total_citas</td>
                        </tr>
                    }
                </tbody>
            </table>

            <div class="titulo">Servicios Especializados</div>
            <table>
                <thead>
                    <tr>
                        <th>Servicio</th>
                        <th>Total de citas</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Especializados)
                    {
                        <tr>
                            <td>@item.nom_serv</td>
                            <td>@item.total_citas</td>
                        </tr>
                    }
                </tbody>
            </table>


            <p class="texto">
                Ahora, se muestran los veterinarios de CliniPet, junto con
                el número de citas asociadas a cada uno de ellos.
            </p>
            <div class="titulo">Citas por Veterinario</div>
            <table>
                <thead>
                    <tr>
                        <th>Veterinario</th>
                        <th>Especialidad</th>
                        <th>Total Citas</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var citaVet in Model.CitasPorVeterinario)
                    {
                    <tr>
                        <td>@citaVet.NombreVeterinario</td>
                        <td>@citaVet.Espec</td>
                        <td>@citaVet.TotalCitas</td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    
</body>
</html>


<style>
    body {
        font-family: "Quicksand", sans-serif;
        margin: 0;
        padding: 10px 0;
        margin: 0;
        padding: 0;
        background-color: #e4e4e3;
        -webkit-print-color-adjust: exact;
    }
</style>
